{
  "name": "@coco-cashu/core",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist",
    "build:js:esm": "esbuild ./index.ts --bundle --platform=node --target=es2018 --format=esm --outfile=dist/index.mjs --tsconfig=./tsconfig.json --external:@cashu/cashu-ts",
    "build:js:cjs": "esbuild ./index.ts --bundle --platform=node --target=es2018 --format=cjs --outfile=dist/index.cjs --tsconfig=./tsconfig.json --external:@cashu/cashu-ts",
    "build:types": "tsc",
    "build": "bun run clean && bun run build:js:esm && bun run build:js:cjs && bun run build:types",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "esbuild": "latest",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@cashu/cashu-ts": "2.6"
  }
}
