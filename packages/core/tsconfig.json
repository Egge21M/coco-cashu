{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./*"],
      "@core/models": ["./models/index.ts"],
      "@core/services": ["./services/index.ts"],
      "@core/repositories": ["./repositories/index.ts"],
      "@core/repositories/memory": ["./repositories/memory/index.ts"],
      "@core/events": ["./events/index.ts"],
      "@core/infra": ["./infra/index.ts"]
    }
  }
}
